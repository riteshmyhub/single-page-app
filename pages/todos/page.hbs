{{> Navbar title='todos' }}
<div>
    <div>
        <h4>New Task Todo</h4>
        <form>
            <div>
                <label for="personal">
                    <input type="radio" value="personal" name="category" id="personal" required>
                    <span role="button">Personal</span>
                </label>
                <label for="teams">
                    <input type="radio" value="teams" name="category" id="teams" required>
                    <span role="button" class="cursor-pointer">Teams</span>
                </label>
            </div>
            <div>
                <label for="title_task" role="button">title task</label>
                <input type="text" name="title_task" id="title_task" autocomplete="off" required>
            </div>
            <div>
                <label for="discription" role="button">Discription</label>
                <textarea name="discription" id="discription" rows="3" autocomplete="off" required></textarea>
            </div>
            <div>
                <button type="submit">submit</button>
                <button type="button" id="reset-app-btn">
                    delete all users
                </button>
            </div>
        </form>
    </div>
    <div>
        <h4>New Task Todo</h4>
        <ul>
            <li>
                <button onclick="location.replace('#/todos?status=all')">
                    all
                </button>
            </li>
            <li data-active-link="pending">
                <button onclick="location.replace('/#/todos?status=pending')">pending</button>
            </li>
            <li data-active-link="done">
                <button onclick="location.replace('/#/todos?status=done')">done</button>
            </li>
        </ul>
    </div>
    <div>
        <div>loading...</div>
    </div>
    <div>
        {{> TaskCard }}
    </div>
    <div>
        <div>you don't have task in </div>
    </div>
</div>